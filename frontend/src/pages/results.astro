---
import Page from "@components/Page.astro";
import Footer from "@components/Footer.astro";
import Sidebar from "@components/Sidebar.tsx";
import InfoBanner from "@components/InfoBanner.tsx";
import Results from "@layout/results/Results.astro";
---

<Page title="Results">
  <Sidebar client:load>
    <div class="my-2">
      <InfoBanner client:load>
        In this area, you select the results you want to compare, up to <span
          class="font-bold">5</span
        >.
      </InfoBanner>
    </div>
    <div class="my-2">
      <Results />
    </div>
  </Sidebar>
  <Footer slot="footer" />
</Page>
