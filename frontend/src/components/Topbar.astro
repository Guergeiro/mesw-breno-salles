---
import UserBadge from "./UserBadge.tsx";
const { pathname } = Astro.url;
---

<nav
  class="border-gray-200 bg-gray-50 dark:bg-gray-800 dark:border-gray-700 fixed top-0 left-0 right-0 w-full z-40"
>
  <div
    class="max-w-screen-xl flex items-center justify-between mx-auto gap-x-4 p-4"
  >
    <a href="/">
      <img
        src="/android-chrome-512x512.png"
        class="h-8 w-8"
        alt="Breno Salles Logo"
      />
    </a>
    <div class="items-center justify-between flex w-auto">
      <ul
        class="flex font-medium p-0 rounded-lg flex-row space-x-8 mt-0 dark:bg-gray-900"
      >
        <li>
          {
            pathname === "/" ? (
              <a
                href="/"
                class="block rounded bg-transparent text-blue-700 p-0 dark:text-blue-500"
                aria-current="page"
              >
                Tools
              </a>
            ) : (
              <a
                href="/"
                class="block text-gray-900 rounded hover:bg-transparent hover:text-blue-700 p-0 dark:text-white dark:hover:text-blue-500 dark:hover:bg-transparent dark:border-gray-700"
              >
                Tools
              </a>
            )
          }
        </li>
        <li>
          {
            pathname === "/results" ? (
              <a
                href="/results"
                class="block rounded bg-transparent text-blue-700 p-0 dark:text-blue-500"
                aria-current="page"
              >
                Results
              </a>
            ) : (
              <a
                href="/results"
                class="block text-gray-900 rounded hover:bg-transparent hover:text-blue-700 p-0 dark:text-white dark:hover:text-blue-500 dark:hover:bg-transparent dark:border-gray-700"
              >
                Results
              </a>
            )
          }
        </li>
      </ul>
    </div>
    <div class="flex items-center">
      <UserBadge client:only="solid-js" />
    </div>
  </div>
</nav>
